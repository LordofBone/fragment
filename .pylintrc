[MASTER]
# A comma-separated list of file name patterns to be excluded from checks.
ignore-patterns=tests/*,migrations/*

[MESSAGES CONTROL]
# Disable the message, report, category or checker with the given id(s).
disable=
    C0114,  # Missing module docstring
    C0115,  # Missing class docstring
    C0116,  # Missing function or method docstring
    C0103,  # Variable name doesn't conform to snake_case naming style
    C0301,  # Line too long
    R0902,  # Too many instance attributes
    R0913,  # Too many arguments
    R0914,  # Too many local variables
    R0801,  # Duplicate code
    W0401,  # Wildcard import
    W0201,  # Attribute defined outside __init__

# Enable the following messages
enable=
    E0602,  # Undefined variable
    E0401,  # Import errors

[FORMAT]
# Maximum number of characters on a single line.
max-line-length=120

[BASIC]
# Variable names that should be ignored from the snake_case convention
good-names=i,j,k,ex,Run,_,env,GL,glm,gl

[DESIGN]
# Maximum number of arguments for function / method
max-args=10

# Maximum number of attributes for a class (see R0902)
max-attributes=10

# Maximum number of local variables for function / method body
max-locals=20

[REPORTS]
# Tells whether to display a full report or only the messages
reports=no
